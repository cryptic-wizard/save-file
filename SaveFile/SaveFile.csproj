<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.1;net5.0</TargetFrameworks>
    <Title>SaveFile</Title>
    <Description>A text file read/write class for arbitrary data types .NET and .NET Core</Description>
    <AssemblyName>SaveFile</AssemblyName>
    <RootNamespace>SaveFile</RootNamespace>
    <Authors>cryptic-wizard</Authors>
    <LicenseType>MIT</LicenseType>
    <Copyright>Copyright Â©2021 cryptic-wizard</Copyright>
    <RepositoryUrl>https://github.com/cryptic-wizard/text-save-file</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <NeutralLanguage>en</NeutralLanguage>
    <SignAssembly>false</SignAssembly>

    <PackageId>CrypticWizard.SaveFile</PackageId>
    <Version>0.1.0</Version>
    <PackageProjectUrl>https://github.com/cryptic-wizard/text-save-file</PackageProjectUrl>
    <PackageTags>save file .txt .csv</PackageTags>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageIcon>icon.png</PackageIcon>
    <PackageDescription>A text file read/write class for arbitrary data types .NET and .NET Core</PackageDescription>
    <PackageReleaseNotes>Initial Release</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <None Include="icon.png" Pack="true" PackagePath="" />
